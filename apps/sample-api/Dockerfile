#
# Build the docker image with `npx nx docker-build sample-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t sample-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system sample-api && \
          adduser --system -G sample-api sample-api

COPY apps/sample-api/dist sample-api/
RUN chown -R sample-api:sample-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix sample-api --omit=dev -f install

CMD [ "node", "sample-api" ]
